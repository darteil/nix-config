expand-right = true

label-open = "    "
label-close = "  "
label-separator = "  "

menu-0-0 = "SHUTDOWN"
menu-0-0-exec = shutdown -P now

menu-0-1 = "RESTART   "
menu-0-1-exec = shutdown -r now

format-background = #fb4934
format-foreground = #262626
format-margin = 1

