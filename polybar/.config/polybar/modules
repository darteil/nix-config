layout-icon-1 = us;EN

label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-background = #fb4934
label-indicator-foreground = #262626

;=====================================================
;     Pulseaudio
;=====================================================

[module/pulseaudio]
type = internal/pulseaudio
sink = alsa_output.pci-0000_01_00.1.hdmi-stereo-extra1
use-ui-max = true
interval = 5

format-volume = <label-volume>
format-volume-prefix = "墳"
format-volume-prefix-foreground = #262626
format-volume-prefix-background = #458588
format-volume-prefix-padding = 2
format-volume-prefix-margin-left = 1

label-volume = "%percentage%%"
label-volume-background = #a89984
label-volume-foreground = #262626
label-volume-padding = 2
label-volume-margin-right = 1

label-muted = "婢"
label-muted-background = #fb4934
label-muted-foreground = #262626
label-muted-padding = 2
label-muted-margin = 1

;=====================================================
;     USB
