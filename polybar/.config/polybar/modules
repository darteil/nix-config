format = <label>
format-prefix = ""
format-prefix-foreground = #262626
format-prefix-background = #b16286
format-prefix-padding = 2
format-prefix-margin-left = 1

label = %date%
label-background = #a89984
label-foreground = #262626
label-padding = 2
label-margin-right = 1

