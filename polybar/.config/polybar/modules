;=====================================================
;     i3WM
;=====================================================

[module/i3]
type = internal/i3

pin-workspaces = true
strip-wsnumbers = true
index-sort = true

enable-click = true
enable-scroll = true

wrapping-scroll = false
reverse-scroll = false

format = <label-state> <label-mode>

format-background = #383838
format-margin = 1

label-focused = %name%
label-focused-foreground = #383838
label-focused-background = #fe8019
label-focused-padding = 3

label-unfocused = %name%
label-unfocused-foreground = #edecec
label-unfocused-background = #383838
label-unfocused-padding = 3

label-visible = %name%
label-visible-foreground = #edecec
label-visible-background = #383838
label-visible-padding = 3

label-urgent = %name%
label-urgent-background = #d13525
label-urgent-foreground = #383838
label-urgent-padding = 3

label-mode-background = #fb4934
label-mode-foreground = #262626
label-mode-padding = 3

;=====================================================
;     Keyboard
;=====================================================

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format = <label-layout><label-indicator>
format-prefix = ""
format-prefix-background = #689d6a
format-prefix-foreground = #262626
format-prefix-padding = 2

