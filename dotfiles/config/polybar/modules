;=====================================================
;     Power menu
;=====================================================

[module/menu-power]
type = custom/menu

expand-right = true

label-open = "    "
label-close = "  "
label-separator = " / "

menu-0-0 = "shutdown"
menu-0-0-exec = shutdown -P now

menu-0-1 = "restart "
menu-0-1-exec = shutdown -r now

format-background = #458588
format-foreground = #ebdbb2
format-margin = 1

