client.focused_inactive #504945 #504945 #243140 #504945   #504945
client.unfocused        #076678 #928374 #282828 #504945   #504945
client.urgent           #2F343A #fb4934 #282828 #fb4934   #fb4934
client.placeholder      #000000 #0C0C0C #FFFFFF #000000   #0C0C0C

client.background       #272827

set $HOME /home/darteil

bindsym $mod+b exec vivaldi-stable
bindsym Print exec "flameshot gui"
bindsym $mod+x exec --no-startup-id ~/.config/i3/lock.sh
bindsym $mod+space exec "polybar-msg cmd toggle"

exec_always --no-startup-id xfce4-power-manager
exec_always --no-startup-id xinput --set-prop 14 'libinput Accel Speed' -0.8
exec_always --no-startup-id $HOME/.config/polybar/launch.sh
#exec --no-startup-id megasync
exec --no-startup-id i3-msg workspace $ws1
exec --no-startup-id udiskie -ans &
exec --no-startup-id nvidia-settings --load-config-only
exec --no-startup-id dunst
exec --no-startup-id picom --config $HOME/.config/picom/picom.conf

exec_always --no-startup-id feh --bg-fill $HOME/Images/fon3.jpg --bg-fill $HOME/Images/dem.jpg
